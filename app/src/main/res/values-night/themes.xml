<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for Night mode. -->
    <style name="Theme.MinhasContas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Main Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSecondary">@color/cinza</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>
