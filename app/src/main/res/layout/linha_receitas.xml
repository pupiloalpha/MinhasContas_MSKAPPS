<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_receitas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:contentPadding="0dp"
    app:cardBackgroundColor="@color/card_receita_color"
    tools:ignore="RtlHardcoded">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_titulo_receita_principal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/linha_receita"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/receita_color"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/valor_receitas"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="1.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/valor_receitas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/zero"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/receita_color"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1.3"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_receita_principal"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/separador_principal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/receita_color"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_receita_principal" />

        <TextView
            android:id="@+id/tv_titulo_recebido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/resumo_recebidas"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintEnd_toStartOf="@+id/tv_titulo_a_receber"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separador_principal" />

        <TextView
            android:id="@+id/tv_titulo_a_receber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/resumo_areceber"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_recebido"
            app:layout_constraintTop_toTopOf="@+id/tv_titulo_recebido" />

        <TextView
            android:id="@+id/valor_recebido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/zero"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/receita_color"
            app:layout_constraintEnd_toStartOf="@+id/valor_receber"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_recebido" />

        <TextView
            android:id="@+id/valor_receber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/zero"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/receita_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/valor_recebido"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_a_receber" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>