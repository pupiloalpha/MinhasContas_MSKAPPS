<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_despesas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="0dp"
    app:cardBackgroundColor="@color/card_despesa_color"
    tools:ignore="RtlHardcoded">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_titulo_despesa_principal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/linha_despesa"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/vermelho"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/valor_despesas"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="1.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/valor_despesas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/vermelho"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1.3"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_despesa_principal"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/separador_principal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/vermelho"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_despesa_principal"
            />

        <TextView
            android:id="@+id/tv_titulo_pagas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/resumo_pagas"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintEnd_toStartOf="@+id/tv_titulo_a_pagar"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separador_principal"
            />

        <TextView
            android:id="@+id/tv_titulo_a_pagar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/resumo_faltam"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_pagas"
            app:layout_constraintTop_toTopOf="@+id/tv_titulo_pagas"
            />

        <TextView
            android:id="@+id/valor_desp_paga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho"
            app:layout_constraintEnd_toStartOf="@+id/valor_desp_pagar"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_pagas"
            />

        <TextView
            android:id="@+id/valor_desp_pagar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/valor_desp_paga"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_pagas"
            />

        <View
            android:id="@+id/separador_categorias"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="8dp"
            android:background="@color/cinza_claro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/valor_desp_paga"
            />

        <TextView
            android:id="@+id/tv_titulo_alimentacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/dica_alimentacao"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintEnd_toStartOf="@+id/tv_titulo_educacao"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separador_categorias"
            />

        <TextView
            android:id="@+id/tv_titulo_educacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:text="@string/dica_educacao"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintEnd_toStartOf="@+id/tv_titulo_moradia"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_alimentacao"
            app:layout_constraintTop_toTopOf="@+id/tv_titulo_alimentacao"
            />

        <TextView
            android:id="@+id/tv_titulo_moradia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/dica_moradia"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_educacao"
            app:layout_constraintTop_toTopOf="@+id/tv_titulo_alimentacao"
            />

        <TextView
            android:id="@+id/valor_alimentacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho"
            app:layout_constraintEnd_toStartOf="@+id/valor_educacao"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_alimentacao"
            />

        <TextView
            android:id="@+id/valor_educacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho"
            app:layout_constraintEnd_toStartOf="@+id/valor_moradia"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/valor_alimentacao"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_alimentacao"
            />

        <TextView
            android:id="@+id/valor_moradia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/valor_educacao"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_alimentacao"
            />

        <TextView
            android:id="@+id/tv_titulo_saude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/dica_saude"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintEnd_toStartOf="@+id/tv_titulo_transporte"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/valor_alimentacao"
            />

        <TextView
            android:id="@+id/tv_titulo_transporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:text="@string/dica_transporte"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintEnd_toStartOf="@+id/tv_titulo_outros"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_saude"
            app:layout_constraintTop_toTopOf="@+id/tv_titulo_saude"
            />

        <TextView
            android:id="@+id/tv_titulo_outros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/dica_outros"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_titulo_transporte"
            app:layout_constraintTop_toTopOf="@+id/tv_titulo_saude"
            />

        <TextView
            android:id="@+id/valor_saude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left|center_vertical"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho"
            app:layout_constraintEnd_toStartOf="@+id/valor_transporte"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_saude"
            />

        <TextView
            android:id="@+id/valor_transporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho"
            app:layout_constraintEnd_toStartOf="@+id/valor_outros"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/valor_saude"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_saude"
            />

        <TextView
            android:id="@+id/valor_outros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|center_vertical"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/valor_transporte"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_saude"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>