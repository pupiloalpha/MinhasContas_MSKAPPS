<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="@string/pref_categoria_geral_key"
        android:title="@string/pref_titulo_geral">
        <ListPreference
            android:defaultValue="nome ASC"
            android:dialogTitle="@string/pref_titulo_ordem"
            android:entries="@array/ordem_contas"
            android:entryValues="@array/ordem_contas_valores"
            android:key="@string/pref_key_ordem"
            android:summary="%s"
            android:title="@string/pref_dialogo_ordem" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_key_resumo"
            android:summary="@string/pref_descricao_resumo_mensal"
            android:title="@string/pref_titulo_resumo" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_key_categoria"
            android:summary="@string/pref_descricao_categoria"
            android:title="@string/pref_titulo_categoria" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_key_pagamento"
            android:summary="@string/pref_descricao_editapagamento"
            android:title="@string/pref_titulo_pagamento" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_key_saldo"
            android:summary="@string/pref_descricao_saldo_real"
            android:title="@string/pref_titulo_saldo" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/pref_categoria_seguranca_key"
        android:title="@string/titulo_acesso">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_key_acesso"
            android:summary="@string/pref_descricao_acesso_livre"
            android:title="@string/pref_titulo_acesso" />

        <EditTextPreference
            android:dialogTitle="@string/pref_dialogo_senha"
            android:key="@string/pref_key_senha"
            android:summary="@string/pref_descricao_senha"
            android:inputType="textPassword"
            android:title="@string/pref_titulo_senha" />
        <ListPreference
            android:key="pergunta_seguranca_id"
            android:title="@string/titulo_pergunta_secreta"
            android:summary="%s"
            android:entries="@array/perguntas_seguranca"
            android:entryValues="@array/perguntas_seguranca_valores"
            android:defaultValue="0"
            android:dialogTitle="@string/titulo_pergunta_secreta" />

        <EditTextPreference
            android:key="resposta_secreta"
            android:title="@string/dica_resposta_secreta_ajustes"
            android:summary="@string/dica_resposta_secreta_ajustes_summary"
            android:dialogTitle="@string/titulo_pergunta_secreta"
            android:inputType="textNoSuggestions" />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_titulo_bkup">
        <!-- New Preference to select the backup folder using SAF -->
        <Preference
            android:key="@string/pref_key_bkup_select_folder"
            android:title="@string/pref_titulo_bkup_select_folder"
            android:summary="@string/pref_descricao_bkup_select_folder"
            app:iconSpaceReserved="false" />

        <!-- New Preference to execute the manual backup -->
        <Preference
            android:key="@string/pref_key_bkup"
            android:title="@string/pref_titulo_bkup"
            android:summary="@string/pref_descricao_bkup"
            app:iconSpaceReserved="false" />

        <!-- New Preference to execute the manual restore -->
        <Preference
            android:key="@string/pref_key_restaura"
            android:title="@string/pref_titulo_restaura"
            android:summary="@string/pref_descricao_restaura"
            app:iconSpaceReserved="false" />

        <!-- Existing auto backup switch -->
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/pref_key_auto_bkup"
            android:summaryOff="@string/pref_descricao_auto_bkup_off"
            android:summaryOn="@string/pref_descricao_auto_bkup_on"
            android:title="@string/pref_titulo_auto_bkup"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/pref_categoria_exportar_key"
        android:title="@string/pref_titulo_categoria_exportar">
        <Preference
            android:key="@string/pref_key_exportar"
            android:summary="@string/pref_descricao_exportar"
            android:title="@string/pref_titulo_exportar" />

        <Preference
            android:key="@string/pref_key_importar"
            android:summary="@string/pref_descricao_importar"
            android:title="@string/pref_titulo_importar" />

    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/pref_categoria_apagatudo_key"
        android:title="@string/pref_titulo_apagatudo">
        <Preference
            android:key="@string/pref_key_apagatudo"
            android:summary="@string/pref_descricao_apagatudo"
            android:title="@string/pref_titulo_apagatudo" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/pref_categoria_info_key"
        android:title="@string/pref_titulo_categoria_info">
        <Preference
            android:key="@string/pref_key_autor"
            android:summary="@string/pref_descricao_autor"
            android:title="@string/pref_titulo_autor" />
        <Preference
            android:key="@string/pref_key_versao"
            android:summary="@string/pref_descricao_versao"
            android:title="@string/pref_titulo_versao" />
    </PreferenceCategory>

</PreferenceScreen>