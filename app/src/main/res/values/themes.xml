<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MinhasContas" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/cinza</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="tabStyle">@style/Widget.App.Tabs</item>

        <!-- ActionMode styling -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar"> <item name="android:background">?attr/colorPrimary</item> <item name="titleTextColor">?attr/colorOnPrimary</item> <item name="colorControlNormal">?attr/colorOnPrimary</item> </style>

    <style name="Widget.App.Tabs" parent="Widget.Material3.TabLayout"> <item name="android:background">@color/surface</item> <item name="tabIndicatorColor">@color/tab_indicator</item> <item name="tabSelectedTextColor">@color/tab_text_selected</item> <item name="tabTextColor">@color/tab_text_unselected</item> </style>

    <style name="TemaDialogo" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="TemaTexto" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/branco</item>
        <item name="colorControlNormal">@color/branco</item>
        <item name="colorControlActivated">@color/branco</item>
        <item name="colorControlHighlight">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:textColorHint">@color/branco</item>
        <item name="android:textColorSecondary">@color/branco</item>
    </style>

    <style name="SplashScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- New ActionMode styles -->
    <style name="Widget.App.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/preto</item>
        <item name="titleTextStyle">@style/Widget.App.ActionMode.Title</item>
        <item name="subtitleTextStyle">@style/Widget.App.ActionMode.Subtitle</item>
        <item name="backgroundSplit">@color/preto</item>
    </style>

    <style name="Widget.App.ActionMode.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="Widget.App.ActionMode.Subtitle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle">
        <item name="android:textColor">@color/branco</item>
    </style>
</resources>