<resources>

    <!-- Tema das caixas de diÃ¡logos -->
    <style name="TemaBloqueio" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/verde_escuro</item>
    </style>

    <style name="TemaDialogo" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/verde_escuro</item>
    </style>

    <!-- Tema das telas do aplicativo -->
    <style name="TemaNovo" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/preto</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/verde_escuro</item>
        <item name="android:alertDialogTheme">@style/TemaDialogo</item>
    </style>

    <!-- Tema das telas do aplicativo -->
    <style name="TemaTabs" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/preto</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/verde_escuro</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:dialogTheme">@style/TemaDialogo</item>
        <item name="android:alertDialogTheme">@style/TemaDialogo</item>
    </style>

    <!-- Tema das telas do aplicativo -->
    <style name="TemaAjuda" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/preto</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/verde_escuro</item>
    </style>

    <!-- Actionbar tab text appearance -->
    <style name="ActionBarTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Tema das telas do aplicativo -->
    <style name="TemaTexto" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/branco</item>
        <item name="colorControlNormal">@color/branco</item>
        <item name="colorControlActivated">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:textColorHint">@color/branco</item>
        <item name="android:textColorSecondary">@color/branco</item>

    </style>

    <!-- Tema da splash screen -->
    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>